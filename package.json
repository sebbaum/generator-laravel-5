{
  "name": "generator-laravel-5",
  "version": "1.7.0",
  "description": "A yeoman generator for Laravel 5 applications where certain packages and BrowserSync are included.",
  "homepage": "https://github.com/sebbaum/generator-laravel-5",
  "author": {
    "name": "Sebastian Baum",
    "email": "seb.baum@googlemail.com",
    "url": "http://www.sebbaum.de"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator",
    "Laravel",
    "BrowserSync",
    "Laravel 5"
  ],
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.10.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.7.0",
    "husky": "^0.14.3",
    "jasmine": "^2.99.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "lint-staged": "^4.2.1",
    "prettier": "^1.17.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "lodash": "^4.17.11",
    "yeoman-generator": "^2.0.5",
    "yosay": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "npm audit --audit-level high",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "sebbaum/generator-laravel-5",
  "license": "Apache-2.0"
}
